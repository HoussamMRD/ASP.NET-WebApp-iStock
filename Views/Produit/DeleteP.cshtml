@model Produit

<form method="post" asp-action="DeletePP">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Produit</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="NameP"></label>
			<input asp-for="NameP" disabled class="form-control" />
			<span asp-validation-for="NameP" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Reference"></label>
			<input asp-for="Reference" disabled class="form-control" />
			<span asp-validation-for="Reference" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="QTT"></label>
			<input asp-for="QTT" disabled class="form-control" />
			<span asp-validation-for="QTT" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Prix"></label>
			<input asp-for="Prix" disabled class="form-control" />
			<span asp-validation-for="Prix" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Warehouse_Name"></label>
			<input asp-for="Warehouse_Name" disabled class="form-control" />
			<span asp-validation-for="Warehouse_Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Fournisseur_Name"></label>
			<input asp-for="Fournisseur_Name" disabled class="form-control" />
			<span asp-validation-for="Fournisseur_Name" class="text-danger"></span>
		</div>


		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Produit" asp-action="IndexP" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}