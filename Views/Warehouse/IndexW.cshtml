@using System.Collections;


@model IEnumerable< Warehouse>
@{
    ViewData["Title"] = "IndexW";
    }

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Warehouse List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Warehouse" asp-action="CreateW" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New  Warehouse
            </a>
        </div>      
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                   Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Capacity
                </th>
               

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="50%">
                        @obj.Location
                    </td>
                    <td width="50%">
                        @obj.Capacity
                    </td>
                    


                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Warehouse" asp-action="EditW" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Warehouse" asp-action="DeleteW" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


