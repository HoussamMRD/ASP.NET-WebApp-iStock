@using System.Collections;


@model IEnumerable<Fournisseur>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fournisseur List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Fournisseur" asp-action="CreateF" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Fournisseur
            </a>
        </div>                     
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                     LastName
                </th>
                <th>
                     FirstName
                </th>
                <th>
                     Email
                </th>
                <th>
                    Phone
                </th>
             
                <th>
                    QTT Entre
                </th>
                <th>
                    Prix_Achat
                </th>
            
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Nom
                    </td>
                    <td width="50%">
                        @obj.Prenom
                    </td>
                    <td width="50%">
                        @obj.Email
                    </td>
                    <td width="50%">
                        @obj.Telephone
                    </td>
                   
                    <td width="50%">
                        @obj.QTT_Entre
                    </td>
                    <td width="50%">
                        @obj.Prix_Achat
                    </td>
                    
                  
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Fournisseur" asp-action="EditF" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Fournisseur" asp-action="DeleteF" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

   